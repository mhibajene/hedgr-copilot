{
  "name": "@hedgr/frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.vitest.json --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "test": "vitest run __tests__ --passWithNoTests",
    "test:watch": "vitest",
    "build:test": "next build",
    "serve:test": "next build && next start -p 3000",
    "e2e": "playwright test",
    "e2e:ci": "playwright test --reporter=line",
    "e2e:headed": "playwright test --headed",
    "e2e:update": "playwright test -u"
  },
  "dependencies": {
    "@hedgr/ui": "workspace:*",
    "next": "^15.3.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.9.0",
    "vitest": "^1.6.1"
  }
}