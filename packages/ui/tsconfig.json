{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    // allow default-import from CommonJS modules (Reactâ€™s typings)
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // emit only types for downstream consumers
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",

    // enforce strictness
    "strict": true,

    // make `JSX` namespace available
    "lib": ["DOM", "ESNext"],
    
    // so imports like `import { Banner } from '@hedgr/ui'` resolve
    "baseUrl": ".",
    "paths": {
      "@hedgr/ui": ["src"]
    },

    // pick up the React typings installed
    "types": ["react", "react-dom"]
  },
  "include": ["src"]
}