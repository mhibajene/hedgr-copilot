# top-most EditorConfig file
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown and JSON can be a bit wider
[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

# YAML often uses 2-space indent, no tabs
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4