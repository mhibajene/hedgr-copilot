{
  "name": "hedgr-copilot",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "validate:env:frontend": "tsx scripts/validate-env.ts",
    "dev": "turbo run dev",
    "lint": "pnpm -r --if-present run lint",
    "test": "turbo run test",
    "build:ui": "pnpm --filter @hedgr/ui run build",
    "build": "pnpm run build:ui && turbo run build",
    "typecheck": "pnpm -r --if-present run typecheck",
    "validate": "pnpm -w test && pnpm -w typecheck && pnpm -w lint",
    "dev:cli": "doppler run -- pnpm --filter @hedgr/frontend dev",
    "dev:docker": "doppler run -- docker compose up --build frontend",
    "ci:guard:versions": "node ./scripts/ci/guard-no-latest.mjs",
    "changeset": "changeset",
    "version-packages": "changeset version && pnpm -w install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@tailwindcss/postcss": "^4.1.11",
    "tsx": "^4.7.0",
    "turbo": "^2.5.8"
  },
  "version": "1.0.0",
  "main": "index.js",
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "browserslist": "^4.25.1",
    "busboy": "^1.6.0",
    "caniuse-lite": "^1.0.30001727",
    "chownr": "^3.0.0",
    "client-only": "^0.0.1",
    "color": "^4.2.3",
    "color-convert": "^2.0.1",
    "color-name": "^1.1.4",
    "color-string": "^1.9.1",
    "csstype": "^3.1.3",
    "detect-libc": "^2.0.4",
    "electron-to-chromium": "^1.5.187",
    "enhanced-resolve": "^5.18.2",
    "escalade": "^3.2.0",
    "fraction.js": "^4.3.7",
    "graceful-fs": "^4.2.11",
    "is-arrayish": "^0.3.2",
    "jiti": "^2.4.2",
    "lightningcss": "^1.30.1",
    "lightningcss-linux-x64-gnu": "^1.30.1",
    "magic-string": "^0.30.17",
    "minipass": "^7.1.2",
    "minizlib": "^3.0.2",
    "mkdirp": "^3.0.1",
    "nanoid": "^3.3.11",
    "node-releases": "^2.0.19",
    "normalize-range": "^0.1.2",
    "picocolors": "^1.1.1",
    "postcss": "^8.4.31",
    "postcss-value-parser": "^4.2.0",
    "scheduler": "^0.26.0",
    "semver": "^7.7.2",
    "sharp": "^0.34.3",
    "simple-swizzle": "^0.2.2",
    "source-map-js": "^1.2.1",
    "streamsearch": "^1.1.0",
    "styled-jsx": "^5.1.6",
    "tailwindcss": "^4.1.11",
    "tapable": "^2.2.2",
    "tar": "^7.4.3",
    "tslib": "^2.8.1",
    "turbo-linux-64": "^2.5.4",
    "typescript": "^5.8.3",
    "undici-types": "^7.8.0",
    "update-browserslist-db": "^1.1.3",
    "yallist": "^5.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Hedgr Copilot - AI-powered trading assistant",
  "pnpm": {
    "overrides": {
      "react": "19.1.1",
      "react-dom": "19.1.1"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "@tailwindcss/oxide",
      "unrs-resolver"
    ]
  }
}
